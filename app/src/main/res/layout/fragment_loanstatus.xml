<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_35">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="#10E22C00"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="4dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:elevation="4dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/linLoanStatusApplyDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Loan ID"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Loan Amount"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Processing Fee"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Loan Term"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="EMI Amount"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="EMI Due Date"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Payable Amount"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Pending Amount"
                                    android:textColor="@color/Red"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtLoanStatusLoanID"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="27"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txtLoanStatusAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="5000.00"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />
                                <TextView
                                    android:id="@+id/txtLoanStatusProsesingFiss"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="Prosesing Fee"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txtLoanStatusMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="12 Month"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txtLoanStatusEMIAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="1000.00"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />
                                <TextView
                                    android:id="@+id/txtLoanStatusEMIDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="2021-01-01"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />
                                <TextView
                                    android:id="@+id/txtLoanStatusPayloanamount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="Pay Loan Amount"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txtLoanStatuspendingAmmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:hint="Pay Loan Amount"
                                    android:textColor="@color/edti_text_color"
                                    android:textSize="@dimen/_15sdp" />

                            </LinearLayout>


                        </LinearLayout>

                            <TextView
                                android:id="@+id/txtLoanStatusMasage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/edti_text_color"
                                android:textSize="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                               android:padding="@dimen/_10sdp"
                               android:gravity="center"
                                android:visibility="gone"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btnLoanStatusCloseLone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/roundbutton"
                                android:textColor="@color/white"
                                android:text="proceed to close loan"
                                android:textSize="@dimen/dimen_20"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="5sp"></Button>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:background="@color/Red"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Active Loan"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>