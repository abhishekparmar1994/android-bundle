<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_17sdp"
    android:layout_marginRight="@dimen/_17sdp"
    android:gravity="center">
    <Button
        android:id="@+id/btncontcall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttoncall"
        android:text="Phone Call"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_15"
        android:drawableLeft="@drawable/calldilog"
        android:paddingLeft="@dimen/_10sdp"/>
    <Button
        android:id="@+id/btncontwatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbuttonwhatshup"
        android:text="Whatsapp Chat"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_10"
        android:drawableLeft="@drawable/whatshup"
        android:paddingLeft="@dimen/_10sdp"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>